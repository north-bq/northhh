<Page x:Class="TelekomNevaSvyaz.Pagess.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TelekomNevaSvyaz.Pagess"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" >
            <Grid Grid.Row="0">
            <StackPanel>
                <Button Content="Режим администратора" Grid.Row="0"  Height="100" Width="280" FontSize="25" Margin="10" Click="BtAdmin"/>
        <PasswordBox Grid.Row="1"  Height="50" Width="280" FontSize="25" Margin="10" Name="TbAdminCode"/>
            </StackPanel>
    </Grid>
        </Border>
        <Button Content="Вход пользователя" Grid.Row="1" Height="100" Width="240" FontSize="25" Margin="10" VerticalAlignment="Top" Background="#4A67F7"/>
    </Grid>
</Page>
